_log() {
    local logtype=$1
    local text
    local time_now
    text="$(shift; echo "$@")"
    time_now="$(date +'%F %H:%M:%S')"
    case $logtype in
        info)
            echo -e "\033[32m[${time_now}] [Info]\t${text}\033[0m" ;;
        erro)
            echo -e "\033[31m[${time_now}] [Erro]\t${text}\033[0m" ;;
        warn)
            echo -e "\033[33m[${time_now}] [Warn]\t${text}\033[0m" ;;
        *)
            text="$*"
            echo -e "[${time_now}] [Logs]\t${text}" ;;
    esac
}

